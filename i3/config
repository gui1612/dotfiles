set $window-focused-border	#1a1a1a
set $window-unfocused-border	#000000
set $bar-unfocused-border	#121212
#2f343f old inactive bg
set $inactive-bg-color 		#2f343f
set $text-color 		#f3f4f5
set $inactive-text-color 	#676E7D
set $urgent-border		#ff1111
set $urgent-bg-color 		#E53935

# Set colors from Xresources
# Change 'color7' and 'color2' to whatever colors you want i3 to use 
# from the generated scheme.
# NOTE: The '#ff0000' in the lines below is the color i3 will use if
# it fails to get colors from Xresources.
#set_from_resource $text-color 		i3wm.color0 	#FF0000
#set_from_resource $bg-color 		i3wm.color15 	#FF0000

# window colors
#                       	border              		background         text                 indicator
client.focused          	$window-focused-border        	$bg-color          $text-color          #00ff00
client.unfocused        	$window-unfocused-border 	$inactive-bg-color $inactive-text-color #00ff00
client.focused_inactive 	$focused-border 		$inactive-bg-color $inactive-text-color #00ff00
client.urgent 			$urgent-border	 		$urgent-bg-color   $text-color 		#00ff00

client.background		$bg-color

hide_edge_borders both



